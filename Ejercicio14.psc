Algoritmo Ejercicio14
	//Pedir el radio de una circunferencia y calcular su longitud
	
	//DECLARACION DE VARIABLES
	Definir radio Como Real;
	Definir longi como real;
	
	//ENTRADA
	Escribir "Ingrese el radio de la circunferencia en cm"
	Leer radio;
	
	//OPERACIONES
	longi <- 2*PI*radio
	
	//SALIDA
	Escribir "La longitud de la circunferencia es ", longi, " cm";
	
FinAlgoritmo
